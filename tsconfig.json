{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "resources/js/src/*"
            ],
            "!/*": [
                "public/*"
            ]
        },
        "noImplicitAny": false,
        "allowJs": true,
        "types": ["@intlify/vite-plugin-vue-i18n/client", "node"]
    },
    "include": ["resources/js/src/**/*.js", "resources/js/src/**/*.ts", "resources/js/src/**/*.d.ts", "resources/js/src/**/*.tsx", "resources/js/src/**/*.vue"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "ts-node": {}
}
